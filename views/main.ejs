    <div class="CalendarContainer">

        <%for(var i=0; i < calendars.length; i++){%>
            <% var ids = i.toString() %>
            <div class="selector" id=<%= ids %>>
                <h1 class="monthName"><%= calendars[i].getMonthName() %></h1>
                <div class="calendar">
                    <% for(var x = 1; x <= calendars[i].getMonthDays(); x++){ %>
                        <div class="day <%= x %>"><%= x %></div>    
                    <%}%>
                </div>
            </div>
        <%}%>
    </div>

    <div class="editcoantiner center">
        <div class="basebutton" id="log">Save</div>
    </div>


    </div>
